---
import Footer from "@/components/Footer.astro";
import Head from "@/components/Head.astro";
import { SITE } from "@/consts";
import Header from "../components/Header.astro";

type Props = {
  title: string;
  description: string;
  ogImage?: string;
};

const { title, description, ogImage = "/logo.jpg" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <Head
      title={`${title} | ${SITE.NAME}`}
      description={description}
      image={ogImage}
    />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
