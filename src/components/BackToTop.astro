<button
  id="back-to-top"
  class="neo-button relative group w-fit flex pl-10 pr-4 py-2 flex-nowrap rotate-[-0.5deg] hover:rotate-0"
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 24 24"
    class="absolute top-1/2 left-3 -translate-y-1/2 size-5 stroke-2 fill-none stroke-current rotate-90"
  >
    <line
      x1="5"
      y1="12"
      x2="19"
      y2="12"
      class="translate-x-2 group-hover:translate-x-0 scale-x-0 group-hover:scale-x-100 transition-transform duration-300 ease-in-out"
    ></line>
    <polyline
      points="12 5 5 12 12 19"
      class="translate-x-1 group-hover:translate-x-0 transition-transform duration-300 ease-in-out"
    ></polyline>
  </svg>
  <div class="text-sm font-bold ml-6">Back to top</div>
